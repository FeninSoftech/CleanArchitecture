@page
@model Fenin.Web.AddProductModel

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>AddProduct</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductImage" class="control-label"></label>
                <input asp-for="Product.ProductImage" class="form-control" />
                <span asp-validation-for="Product.ProductImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.SKU" class="control-label"></label>
                <input asp-for="Product.SKU" class="form-control" />
                <span asp-validation-for="Product.SKU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Width" class="control-label"></label>
                <input asp-for="Product.Width" class="form-control" />
                <span asp-validation-for="Product.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Height" class="control-label"></label>
                <input asp-for="Product.Height" class="form-control" />
                <span asp-validation-for="Product.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Length" class="control-label"></label>
                <input asp-for="Product.Length" class="form-control" />
                <span asp-validation-for="Product.Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="listproduct">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
